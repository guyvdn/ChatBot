@page "/"

<PageTitle>AI Chatbot</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">Chatbot</MudText>

<MudStack>
    <MudTextField @bind-Value="Input" Label="Question" Variant="Variant.Text"></MudTextField>
    <MudButton Color="Color.Primary" Variant="Variant.Filled" @onclick="AskQuestion">Execute</MudButton>
    <MudTextField T="string" Label="Answer" Variant="Variant.Text" Text="@Output" AutoGrow/>
</MudStack>
